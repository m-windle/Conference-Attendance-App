<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.m_windle.xyz_conference.people.PeopleFragment">

    <android.support.design.widget.TabLayout android:id="@+id/peopleTabs"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        style="@style/TabLayoutStyle" />

    <android.support.v4.view.ViewPager android:id="@+id/peopleContainer"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below="@+id/peopleTabs"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>
